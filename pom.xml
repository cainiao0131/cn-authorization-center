		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>cn-authorization-center-project</artifactId>
	<packaging>pom</packaging>
	<name>cn-authorization-center-project</name>
	<description>Authorization Center</description>

	<modules>
